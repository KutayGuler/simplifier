{
    "name": "Simplifier",
    "version": "0.1",
    "description": "Simplify your Facebook, YouTube and Spotify experience.",
    "manifest_version": 2,
    "options_page": "options.html",
    "permissions": [
        "tabs", "activeTab", "storage", "declarativeContent", "*://*.youtube.com/*", "webNavigation"
      ],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "options.html"
      }
}